@inherits ComponentBase
@using Microsoft.AspNetCore.Components.Web

<table class="calendar text-center">
    <thead>
        <tr>
            <th class="prev">@("<")</th>
            <th colspan="5">@_startDate.ToString("MMMM").ToUpper()</th>
            <th class="next">@(">")</th>
        </tr>
        <tr>
            <th>D</th>
            <th>S</th>
            <th>T</th>
            <th>Q</th>
            <th>Q</th>
            <th>S</th>
            <th>S</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var week in _monthDictionary.Keys)
        {
            @if (_monthDictionary.TryGetValue(week, out var weekDates))
            {
                <tr>
                    @for (var d = 0; d < 7; d++)
                    {
                        var day = weekDates[d];
                        if (day != DateTime.MinValue)
                        {
                            <td class="date">@day.ToString("dd")</td>
                        }
                        else
                        {
                            <td></td>
                        }
                    }
                </tr>
            }
        }
    </tbody>
</table>